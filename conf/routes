
# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /contas             controllers.ContaController.index()
GET     /contas/create      controllers.ContaController.create()
GET     /contas/:id         controllers.ContaController.show(id: Integer)
GET     /contas/edit/:id    controllers.ContaController.edit(id: Integer)
POST    /contas/edit        controllers.ContaController.update()
POST    /contas/create      controllers.ContaController.save()
GET     /contas/destroy/:id  controllers.ContaController.destroy(id: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
